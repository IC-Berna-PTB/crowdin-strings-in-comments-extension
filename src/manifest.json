{
  "manifest_version": 3,
  "version": "3.13.0",
  "name": "Crowdin Strings in Comments",
  "icons": {
    "128": "icon/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.crowdin.com/*",
        "*://crowdin.com/*"
      ],
      "css": [
        "css/common-menu.css",
        "css/strings-in-comments.css",
        "css/prevent-key-copy.css"
      ],
      "js": [
        "default-language.js",
        "strings-in-comments.js",
        "show-full-file-name.js",
        "prevent-key-copy.js",
        "dark-theme-html-preview.js",
        "all-content-redirect.js",
        "extension-settings-menu.js",
        "extension-settings-server.js",
        "common.js"
      ]
    },
    {
      "matches": [
        "*://*.crowdin.com/*",
        "*://crowdin.com/*"
      ],
      "js": [
        "prevent-pre-filter.js"
      ]
    },
    {
      "matches": [
        "*://valve.crowdin.com/*"
      ],
      "css": [
        "css/source-2-plural-gender.css"
      ],
      "js": [
        "source-2-plural-gender.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{8d65cd1e-0d9d-4e86-a688-ae8d40a88e83}"
    }
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "resource/*"
      ]
    },
    {
      "matches": [
        "*://*.crowdin.com/*",
        "*://crowdin.com/*"
      ],
      "resources": [
        "default-language-inject.js",
        "strings-in-comments-inject.js",
        "extension-settings-menu-inject.js",
        "prevent-pre-filter-inject.js",
        "extension-settings-server-inject.js",
        "dark-theme-html-preview-inject.js",
        "all-content-redirect-inject.js",
        "common-inject.js",
        "source-2-plural-gender-inject.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
